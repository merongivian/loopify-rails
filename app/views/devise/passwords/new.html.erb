<%= render partial: "banner", locals: { page_name: "User", page_description: "" } %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="span4 offset4 well">
      <legend>Forgot your Password?</legend>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :email, wrapper_html: { class: 'control-label' } %>
          </br>
          <%= f.input_field :email, required: true, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-actions">
          <button class="btn btn-info btn-block">Send me reset password instructions</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
