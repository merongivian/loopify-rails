<%= render partial: "banner", locals: { page_name: "User", page_description: "" } %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="span4 offset4 well">
      <legend>Please Login</legend>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email, wrapper_html: { class: 'control-label' } %>
          </br>
          <%= f.input_field :email, required: false, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, wrapper_html: { class: 'control-label' } %>
          </br>
          <%= f.input_field :password, required: false, class: 'form-control' %>
        </div>

        <div class="form-group", id="remember-user">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <button class="btn btn-info btn-block">Login</button>
        </div>
      <% end %>

      <hr />
      Don't have an account? <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up here", new_registration_path(resource_name) %><br />
      <% end -%> <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>
  </div>
</div>
